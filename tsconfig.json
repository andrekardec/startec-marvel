{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "sourceMap": true,
    "noEmit": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": false,
    "checkJs": true,
    "outDir": "./dist/",
    "baseUrl": "./src",
    "types": ["@types/jest", "@types/node"],
    "typeRoots": [
      "@types"
    ],   
    "paths": {
      "@adapters/*": ["./adapters/*"],
      "@config/*": ["./config/*"],
      "@domain/*": ["./domain/*"],
      "@presentation/*": ["./presentation/*"]
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "assets",
    "node_modules",
    "build",
    "webpack.config.js",
    "jest.config.ts"
  ],
  "files": [
    "./src/presentation/styles/themes/styled-components.d.ts"
    ]
}